# Vultr Server Configuration
SERVER_HOST=your-server-ip
SERVER_USER=root
SERVER_PORT=22
SSH_KEY_PATH=~/.ssh/id_rsa

# Application Configuration
APP_DOMAIN=autobot.yourdomain.com
APP_ENV=production

# GitHub Configuration
GITHUB_REPO=gudax/autobot
GITHUB_BRANCH=main

# Database Configuration
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=autobot_trading
POSTGRES_USER=autobot_user
POSTGRES_PASSWORD=change_this_password

# Back Office Server Configuration
BACK_OFFICE_PORT=8000
SECRET_KEY=change_this_secret_key_min_32_chars
ENCRYPTION_KEY=change_this_encryption_key

# Dashboard Configuration
DASHBOARD_PORT=3000
VITE_API_URL=http://localhost:8000
VITE_WS_URL=ws://localhost:8000

# Trading Engine Configuration
MATCH_TRADE_API_URL=https://api.match-trade.com
MATCH_TRADE_WS_URL=wss://api.match-trade.com

# Redis Configuration (Optional - for caching)
REDIS_HOST=localhost
REDIS_PORT=6379

# Nginx Configuration
NGINX_PORT=80
NGINX_SSL_PORT=443

# Backup Configuration
BACKUP_DIR=/var/backups/autobot
BACKUP_RETENTION_DAYS=7

# Monitoring Configuration (Optional)
ENABLE_MONITORING=false
GRAFANA_PORT=3001
PROMETHEUS_PORT=9090
